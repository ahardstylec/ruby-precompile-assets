%ul.nav.nav-tabs
  %li=link_to icon_tag(:list, pat(:list)), url(:accounts, :index)
  %li=link_to icon_tag(:plus, pat(:new)), url(:accounts, :new)
  %li.active=link_to icon_tag(:edit, pat(:edit)), url(:accounts, :edit, :id => @account.id)

.tabs-content
  = form_for :account, url(:accounts, :update, :id => @account.id), :method => :put, :class => 'form-horizontal' do |f|
    =partial 'accounts/form', :locals => { :f => f }
